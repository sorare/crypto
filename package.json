{
  "name": "@sorare/crypto",
  "description": "Crypto used in the Sorare stack",
  "author": "Sorare",
  "license": "MIT",
  "version": "1.1.0",
  "main": "index.js",
  "dependencies": {
    "bip39": "^3.0.4",
    "bn.js": "^5.2.0",
    "elliptic": "^6.5.4",
    "enc-utils": "^3.0.0",
    "ethereumjs-wallet": "^1.0.1",
    "hash.js": "^1.1.7",
    "patch-package": "^6.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/plugin-transform-destructuring": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@babel/runtime": "^7.16.5",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.0.3",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-plugin-macros": "^3.1.0",
    "bigint-buffer": "^1.1.5",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "ffi-napi": "^3.1.0",
    "jest": "^27.4.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "source-map-explorer": "^2.5.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "lint": "yarn run eslint src/*.ts --max-warnings 0",
    "build": "yarn run build:types && yarn run build:js && yarn run build:cpp",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --ignore src/crypto-cpp/build,src/crypto-cpp/**/node_modules --out-dir dist --extensions \".js,.ts\" --source-maps inline",
    "build:cpp": "cd src/crypto-cpp && mkdir -p build/Release && cd build/Release && cmake -DCMAKE_BUILD_TYPE=Release ../.. && make",
    "prepublish": "yarn run build",
    "postinstall": "patch-package",
    "test": "jest ./src",
    "test:cpp": "cd src/crypto-cpp && CTEST_OUTPUT_ON_FAILURE=1 make -C build/Release test",
    "package": "yarn build && cp package.json README.md LICENSE dist/ && cp src/crypto-cpp/src/starkware/crypto/ffi/js/libcrypto_c_exports.so dist/crypto-cpp/src/starkware/crypto/ffi/js && rm dist/index.test.* && rm -r dist/crypto-cpp/src/starkware/crypto/ffi/js/test",
    "release": "yarn clean && yarn version && yarn package && npm publish dist/ --access public"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
